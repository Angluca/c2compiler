public type Context struct @(opaque) {
    // context stuff
    string_pool.Pool* pool;
    FunctionList functions;
    BlockList blocks;
    InstrList instructions;
    ArgList args;   // for functions
    RefList refs;   // for calls
    ConstantList constants;
    GlobalList globals;

    // builder stuff, used during function generation (extract to builder?)
    bool in_block;
    u32 slot_idx;
    u32 num_scopes;
    FuncId cur_func;
    BlockId cur_block;
    u32 blk_start_instr;
    bool block_terminated;
    // only used during function generation / optimization?
    index_list.List block_order;
    BlockList tmp_blocks;
}

public fn Context* create() {
    Context* c = stdlib.calloc(1, sizeof(Context));
    c.pool = string_pool.create(2*1024, 256);
    c.functions.init(64);
    c.blocks.init(256);
    c.instructions.init(32*1024);
    c.args.init(256);
    c.refs.init(128);
    c.constants.init(128);
    c.globals.init(128);

    c.blocks.add(BlockKind.Unspecified);    // skip block 1 in global list

    c.block_order.init(64);
    c.tmp_blocks.init(64);
    return c;
}

public fn void Context.free(Context* c) {
    c.tmp_blocks.free();
    c.block_order.free();

    c.globals.free();
    c.constants.free();
    c.refs.free();
    c.args.free();
    c.instructions.free();
    c.blocks.free();
    c.functions.free();
    c.pool.free();
    stdlib.free(c);
}

