        stdio.printf("  %2d  %s\n", b.used, b.getKindName());
    }
#endif
    // for printing
    f.setBlocks(0, c.tmp_blocks.getCount());
    //c.print_function(id, true);

    // prune unused and empty blocks
    c.checkDest(0);

#if 0
    // TODO use string_buffer
    stdio.printf("AFTER %d\n", num_blocks);
    for (u32 i=0; i<num_blocks; i++) {
        const Block* b = c.tmp_blocks.get(i);
        stdio.printf("  [%2d] ", i);
        if (b.dests[0] == BlockUnused) {
            stdio.printf(" %s", " -");
        } else {
            stdio.printf(" %2d", b.dests[0]);
        }
        if (b.dests[1] == BlockUnused) {
            stdio.printf(" %s", " -");
        } else {
            stdio.printf(" %2d", b.dests[1]);
        }
        stdio.printf("  I[%d %d]", b.instr.start, b.instr.count);
        stdio.printf("  %2d  %s\n", b.used, b.getKindName());
    }
#endif
    //c.print_function(id, true);

    // move blocks to global list
    const u32* order = c.block_order.getFrom(0);
    u32 f_blk_start = c.blocks.getCount();
    u32 f_blk_count = 0;
    BlockId first = 0;
    assert(num_blocks < 128);
    u32[128] convert = {} // TODO resizable
    for (u32 i=0; i<num_blocks; i++) {
        BlockId bid = order[i];
        const Block* b = c.tmp_blocks.get(bid);
        if (!b.used) continue;
        BlockId blk_id = c.blocks.copy(b);
        if (f_blk_count == 0) first = blk_id;
        convert[bid] = f_blk_count;
        //stdio.printf("DEST %d -> %d\n", bid, f_blk_count);
        f_blk_count++;
    }
    f.setBlocks(f_blk_start, f_blk_count);
    // convert dests (old -> new)
    Block* new_blks = c.blocks.get(first);
    assert(convert[0] == 0);
    for (u32 i=0; i<f_blk_count; i++) {
        Block* b = &new_blks[i];
        // TODO can remove b.dests[0] check. convert[0] will be 0?
        //stdio.printf("[%d] CONVERT %d -> %d\n", i, b.dests[0], convert[b.dests[0]]);
        b.dests[0] = convert[b.dests[0]];
        //stdio.printf("[%d] CONVERT %d -> %d\n", i, b.dests[1], convert[b.dests[1]]);
        b.dests[1] = convert[b.dests[1]];
    }

    // TODO use Ref.StackSlot that doesn't change (= not temp)
    c.tmp_blocks.clear();
    c.block_order.clear();

    //c.print_function(id, false);
}

// uses tmp_blocks!
fn BlockId Context.checkDest(Context* c, BlockId id) {
    Block* b = c.tmp_blocks.get(id);

    if (b.checked) {
        if (b.used) return id;  // avoid circular loops
        return b.dests[0];
    }
    b.checked = true;

    if (b.dests[0] == 0 && b.dests[1] == 0) {   // last one
        b.used = true;
        return id;
    }

    // must be a jmp only, dont mark as used
    if (b.instr.count == 1) {
        // Note: ignores Comment Instr

        BlockId new_blk = c.checkDest(b.dests[0]);
        if (new_blk == id) {
            b.used = true;
            b.dests[0] = id;    // create circular loop
        } else {
            b.used = false;
            b.dests[0] = new_blk;   // set for next queries
        }
        return new_blk;
    }

    b.used = true;
    if (b.dests[0]) {
        b.dests[0] = c.checkDest(b.dests[0]);
    }
    if (b.dests[1]) {
        b.dests[1] = c.checkDest(b.dests[1]);
    }

    if (b.dests[0] == b.dests[1]) {
        // both jumps go to same dest, convert cmp + jmp_if -> jmp
        Instr* last = c.instructions.get(b.instr.start + b.instr.count -1);
        Ref ref;
        ref.init(RefKind.JmpDest, id);
        last.init1(InstrKind.Jmp, ref);
        b.dests[1] = 0;
        // unroll all unused temps -> after re-writing?
    }

    return id;
}

